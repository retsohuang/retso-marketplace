{
  "name": "code-review-cli",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "generate-schema": "bun run src/generate-schema.ts",
    "prebuild": "bun run generate-schema",
    "build": "bun run typecheck && bun build src/cli.ts --outdir dist --target node",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/node": "^20.0.0",
    "memfs": "^4.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "isomorphic-git": "^1.36.0",
    "zod": "^4.1.13"
  }
}
