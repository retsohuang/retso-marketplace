{
  "name": "@plugins/code-review-cli",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "generate-schema": "bun run src/generate-schema.ts",
    "prebuild": "bun run generate-schema",
    "build": "bun run typecheck && bun build src/cli.ts --outdir dist --target node",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  }
}
