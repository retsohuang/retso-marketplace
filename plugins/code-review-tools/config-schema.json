{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Code Review Configuration",
  "description": "Configuration for code-review-tools plugin custom rules and settings",
  "type": "object",
  "properties": {
    "builtInRules": {
      "type": "object",
      "properties": {
        "componentExtraction": {
          "type": "boolean"
        },
        "componentReuse": {
          "type": "boolean"
        },
        "aiSlop": {
          "type": "boolean"
        }
      },
      "required": [
        "componentExtraction",
        "componentReuse",
        "aiSlop"
      ],
      "additionalProperties": false
    },
    "customRules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "file": {
            "type": "string",
            "pattern": "^[^/]+\\.md$"
          },
          "enabled": {
            "default": true,
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "file",
          "enabled"
        ],
        "additionalProperties": false
      }
    },
    "parallelization": {
      "type": "object",
      "properties": {
        "maxConcurrentAgents": {
          "type": "integer",
          "minimum": 0,
          "maximum": 20
        }
      },
      "required": [
        "maxConcurrentAgents"
      ],
      "additionalProperties": false
    },
    "reports": {
      "type": "object",
      "properties": {
        "outputDirectory": {
          "type": "string"
        },
        "template": {
          "type": "string",
          "pattern": "^[^/]+\\.md$"
        },
        "summaryTemplate": {
          "type": "string",
          "pattern": "^[^/]+\\.md$"
        }
      },
      "required": [
        "outputDirectory"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": {}
}
